{
  "manifest_version": 2,
  "name": "Manga Progress",
  "version": "1.1.0",
  "description": "Extension assists in the organization of previously read chapters",
  "author": "Daniel Rocha",
  "content_security_policy" : "script-src 'self' https://cdn.jsdelivr.net/npm/vue/dist/vue.js 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "storage",
    "https://cdn.jsdelivr.net/npm/vue/dist/vue.js"
   ],
  "browser_action"	:{
    "default_title": "Manga Progress",
    "default_popup": "public/index.html"
  },
  "content_scripts": [
  	{
  		"matches": ["https://mangahost2.com/manga/*", "https://mangahosted.com/manga/*"],
  		"css": [ "src/css/style.css" ],
  		"js": ["src/daemon.js"]
  	}
  ] 
}
